# PatientService example environment variables
NODE_ENV=development
PORT=3001
SERVICE_NAME=patient-service
DB_DIALECT=postgres
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=hospital_patient_db
JWT_SECRET=REPLACE_ME
