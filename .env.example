# Application Settings
NODE_ENV=development
PORT=3001
SERVICE_NAME=patient-service
LOG_LEVEL=debug

# Database Configuration
DB_DIALECT=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hospital_patient_db
DB_USER=postgres
DB_PASSWORD=postgres

# Alternative MySQL Configuration (uncomment if using MySQL)
# DB_DIALECT=mysql
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=hospital_patient_db
# DB_USER=root
# DB_PASSWORD=root

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=24h

# API Configuration
API_VERSION=v1
API_PREFIX=/api/v1

# Microservices URLs
DOCTOR_SERVICE_URL=http://doctor-service:3002
APPOINTMENT_SERVICE_URL=http://appointment-service:3003

# Logging
LOG_FORMAT=combined
LOG_DIR=./logs

# Server Configuration
REQUEST_TIMEOUT=30000
BODY_LIMIT=10mb

# CORS Configuration
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Redis (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Email Configuration (optional)
EMAIL_SERVICE=gmail
EMAIL_USER=
EMAIL_PASSWORD=
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
